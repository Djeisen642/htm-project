// Import Vuetify styling
@require '~vuetify/src/stylus/app.styl'

.opaque
  opacity: .5

.fb-signin-button
  padding: 4px 8px;
  border-radius: 3px;
  background-color: #4267b2;
  color: #fff;
  cursor: pointer;

.file-input-label
  display: inline-block;

input[type="file"]
  display: none;

.page
  @extend .fade-transition

.container
  &.full-height
    height: 100%;
  .flex
    &.sticky-bottom
      position: absolute;
      bottom: 10px;
